<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Shahrukh Khan"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="45"/>
    </bean>


    <bean name="movie1" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">

    </bean>
    <bean name="movie2" class="com.stackroute.domain.Movie" scope="prototype" autowire="byType">

    </bean>

    <bean name="movie3" class="com.stackroute.domain.Movie" scope="prototype" autowire="constructor">

    </bean>




</beans>
